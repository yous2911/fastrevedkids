# Environment Variables Example for RevEd Kids Backend
# Copy this file to .env and update the values for your environment

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================*
NODE_ENV=development
PORT=3003
HOST=0.0.0.0

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=reved_kids
DB_CONNECTION_LIMIT=20

# =============================================================================
# REDIS CONFIGURATION (Optional - set REDIS_ENABLED=false to disable)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_ENABLED=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# ⚠️  CHANGE THESE IN PRODUCTION - Use strong, unique keys
JWT_SECRET=your-super-secret-jwt-key-must-be-at-least-32-characters-long
JWT_EXPIRES_IN=24h
ENCRYPTION_KEY=your-super-secret-encryption-key-32-chars

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# =============================================================================
# FILE UPLOAD
# =============================================================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# =============================================================================
# MONITORING & METRICS
# =============================================================================
ENABLE_METRICS=true
METRICS_INTERVAL=60000

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_TTL=900
CACHE_MAX_SIZE=1000

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
REQUEST_TIMEOUT=30000
BODY_LIMIT=10485760

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_FILE=

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000

# =============================================================================
# GDPR CONFIGURATION
# =============================================================================
GDPR_ENABLED=true
PARENTAL_CONSENT_REQUIRED=true
CONSENT_TOKEN_EXPIRY_HOURS=168
DATA_RETENTION_DAYS=1095
AUDIT_LOG_RETENTION_DAYS=2190
ANONYMIZATION_AFTER_INACTIVITY_DAYS=730
ENCRYPTION_KEY_ROTATION_DAYS=90
GDPR_REQUEST_DEADLINE_DAYS=30

# =============================================================================
# EMAIL CONFIGURATION (Required for GDPR compliance)
# =============================================================================
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
SMTP_FROM=noreply@revedkids.com
SUPPORT_EMAIL=support@revedkids.com

# =============================================================================
# PRODUCTION NOTES
# =============================================================================
# For production deployment:
# 1. Set NODE_ENV=production
# 2. Use strong, unique JWT_SECRET and ENCRYPTION_KEY (min 32 chars)
# 3. Configure proper SMTP settings for email functionality
# 4. Set up Redis if you want caching (REDIS_ENABLED=true)
# 5. Configure proper CORS_ORIGIN for your frontend domain
# 6. Set up proper database credentials
# 7. Configure LOG_FILE for file-based logging if needed 