# =================================
# REVED KIDS BACKEND CONFIGURATION
# =================================
# Copy this file to .env and update the values for your environment

# =================================
# SERVER CONFIGURATION
# =================================
NODE_ENV=development
PORT=3003
HOST=0.0.0.0

# =================================
# DATABASE CONFIGURATION
# =================================
# MySQL Database Settings
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=reved_kids
DB_CONNECTION_LIMIT=20

# =================================
# REDIS CONFIGURATION (OPTIONAL)
# =================================
# Redis is optional - set REDIS_ENABLED=true to use
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =================================
# SECURITY CONFIGURATION
# =================================
# IMPORTANT: Change these in production!
JWT_SECRET=dev-secret-key-change-in-production-minimum-32-chars
JWT_EXPIRES_IN=24h
ENCRYPTION_KEY=dev-encryption-key-change-in-production-32-chars

# =================================
# RATE LIMITING
# =================================
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# =================================
# FILE UPLOAD SETTINGS
# =================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# =================================
# MONITORING & METRICS
# =================================
ENABLE_METRICS=true
METRICS_INTERVAL=60000

# =================================
# CACHE CONFIGURATION
# =================================
CACHE_TTL=900
CACHE_MAX_SIZE=1000

# =================================
# PERFORMANCE SETTINGS
# =================================
REQUEST_TIMEOUT=30000
BODY_LIMIT=10485760

# =================================
# CORS CONFIGURATION
# =================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# =================================
# LOGGING CONFIGURATION
# =================================
LOG_LEVEL=info
LOG_FILE=

# =================================
# WEBSOCKET CONFIGURATION
# =================================
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000

# =================================
# GDPR COMPLIANCE CONFIGURATION
# =================================
GDPR_ENABLED=true
PARENTAL_CONSENT_REQUIRED=true
CONSENT_TOKEN_EXPIRY_HOURS=168
DATA_RETENTION_DAYS=1095
AUDIT_LOG_RETENTION_DAYS=2190
ANONYMIZATION_AFTER_INACTIVITY_DAYS=730
ENCRYPTION_KEY_ROTATION_DAYS=90
GDPR_REQUEST_DEADLINE_DAYS=30

# =================================
# EMAIL CONFIGURATION (GDPR)
# =================================
# SMTP Settings for sending GDPR emails
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@revedkids.com
SUPPORT_EMAIL=support@revedkids.com

# =================================
# DEVELOPMENT NOTES
# =================================
# 1. For development, you can leave database password empty
# 2. Redis is disabled by default - enable only if needed
# 3. JWT_SECRET and ENCRYPTION_KEY MUST be changed in production
# 4. SMTP settings are optional for development (emails will be logged)
# 5. All timing values are in milliseconds except where noted

# =================================
# PRODUCTION SECURITY CHECKLIST
# =================================
# □ Change JWT_SECRET to a strong 32+ character string
# □ Change ENCRYPTION_KEY to a strong 32+ character string  
# □ Set strong DB_PASSWORD
# □ Configure proper SMTP credentials
# □ Set NODE_ENV=production
# □ Review and adjust rate limiting
# □ Configure proper CORS_ORIGIN
# □ Set appropriate LOG_LEVEL (warn/error for production)
# □ Review GDPR retention periods for compliance