{
  "name": "reved-kids-fastify-backend",
  "version": "2.0.0",
  "description": "RevEd Kids educational app backend with Fastify",
  "main": "dist/server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "tsx watch --clear-screen=false src/server.ts",
    "build": "tsc",
    "build:clean": "rm -rf dist && tsc",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:performance": "vitest run --testNamePattern=performance",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/db/seed.ts",
    "db:reset": "tsx src/db/reset.ts",
    "health": "curl -f http://localhost:3000/api/health || exit 1",
    "monitor": "curl http://localhost:3000/api/monitoring/health",
    "cache:clear": "curl -X DELETE http://localhost:3000/api/monitoring/cache",
    "cache:stats": "curl http://localhost:3000/api/monitoring/cache",
    "docker:build": "docker build -t reved-kids-fastify .",
    "docker:run": "docker run -p 3000:3000 reved-kids-fastify"
  },
  "dependencies": {
    "@fastify/compress": "^7.0.3",
    "@fastify/cookie": "^10.0.1",
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^12.0.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/multipart": "^8.3.0",
    "@fastify/rate-limit": "^10.1.1",
    "@fastify/redis": "^7.0.1",
    "@fastify/sensible": "^6.0.1",
    "@fastify/swagger": "^9.1.0",
    "@fastify/swagger-ui": "^5.0.1",
    "@fastify/under-pressure": "^9.0.1",
    "@fastify/websocket": "^11.0.1",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.36.4",
    "fastify": "^5.1.0",
    "fastify-plugin": "^5.0.1",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.11.6",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "uuid": "^11.0.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.2",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "drizzle-kit": "^0.30.1",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "supertest": "^7.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/reved-kids-fastify.git"
  },
  "keywords": [
    "education",
    "fastify",
    "typescript",
    "drizzle",
    "mysql",
    "redis",
    "websocket",
    "api",
    "backend"
  ],
  "author": "RevEd Kids Team",
  "license": "MIT"
}
