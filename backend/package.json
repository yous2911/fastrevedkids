{
  "name": "fastrevedkids-backend",
  "version": "1.0.0",
  "description": "RevEd Kids Backend API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "db:migrate": "drizzle-kit migrate",
    "db:generate": "drizzle-kit generate",
    "db:seed": "tsx src/db/seed.ts",
    "db:studio": "drizzle-kit studio",
    "docker:build": "docker build -t fastrevedkids-backend .",
    "docker:run": "docker run -p 3000:3000 fastrevedkids-backend",
    "health": "curl http://localhost:3000/health",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/compress": "^4.0.1",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@fastify/websocket": "^8.0.0",
    "fastify": "^4.24.3",
    "drizzle-orm": "^0.29.3",
    "mysql2": "^3.6.5",
    "redis": "^4.6.10",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.22.4",
    "pino": "^8.17.2",
    "pino-pretty": "^10.2.3",
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/sdk-node": "^0.48.0",
    "@opentelemetry/auto-instrumentations-node": "^0.40.0",
    "@opentelemetry/exporter-jaeger": "^0.48.0",
    "@opentelemetry/exporter-prometheus": "^0.48.0",
    "@opentelemetry/instrumentation-fastify": "^0.33.0",
    "@opentelemetry/instrumentation-mysql2": "^0.33.0",
    "@opentelemetry/instrumentation-redis": "^0.33.0",
    "prometheus-client": "^15.1.0",
    "node-cron": "^3.0.3",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.0",
    "nodemailer": "^6.9.7",
    "twilio": "^4.19.0",
    "stripe": "^14.10.0",
    "aws-sdk": "^2.1531.0",
    "compression": "^1.7.4",
    "helmet": "^7.1.0",
    "rate-limiter-flexible": "^3.0.8",
    "sanitize-html": "^2.11.0",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/compression": "^1.7.5",
    "@types/multer": "^1.4.11",
    "@types/nodemailer": "^6.4.14",
    "@types/validator": "^13.11.8",
    "@types/node-cron": "^3.0.11",
    "typescript": "^5.3.3",
    "tsx": "^4.6.2",
    "vitest": "^1.0.4",
    "@vitest/coverage-v8": "^1.0.4",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "prettier": "^3.1.1",
    "drizzle-kit": "^0.20.9",
    "@types/supertest": "^2.0.16",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
