# Environment Variables Example for RevEd Kids Frontend
# Copy this file to .env and update the values for your environment

# =============================================================================
# API CONFIGURATION
# =============================================================================
REACT_APP_API_URL=http://localhost:3003/api
REACT_APP_API_TIMEOUT=30000
REACT_APP_API_RETRY_ATTEMPTS=3

# =============================================================================
# APP CONFIGURATION
# =============================================================================
REACT_APP_APP_NAME=RevEd Kids
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development
REACT_APP_BUILD_DATE=2024-01-01

# =============================================================================
# KIOSK MODE CONFIGURATION
# =============================================================================
REACT_APP_KIOSK_EXIT_CODE=PARENT123
REACT_APP_KIOSK_SESSION_TIMEOUT=45
REACT_APP_KIOSK_AUTO_ACTIVATE=false
REACT_APP_KIOSK_IDLE_TIMEOUT=300

# =============================================================================
# FEATURE FLAGS
# =============================================================================
REACT_APP_ENABLE_KIOSK_MODE=true
REACT_APP_ENABLE_OFFLINE_MODE=true
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_DEBUG_MODE=false
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true
REACT_APP_ENABLE_ERROR_TRACKING=true
REACT_APP_ENABLE_GDPR_COMPLIANCE=true
REACT_APP_ENABLE_ADAPTIVE_LEARNING=true
REACT_APP_ENABLE_SPACED_REPETITION=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
REACT_APP_DEBUG_MODE=false
REACT_APP_LOG_LEVEL=info
REACT_APP_SHOW_DEBUG_PANEL=false
REACT_APP_ENABLE_HOT_RELOAD=true

# =============================================================================
# PERFORMANCE & OPTIMIZATION
# =============================================================================
REACT_APP_ENABLE_LAZY_LOADING=true
REACT_APP_ENABLE_IMAGE_OPTIMIZATION=true
REACT_APP_ENABLE_CODE_SPLITTING=true
REACT_APP_CACHE_DURATION=3600

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
REACT_APP_ENABLE_SECURITY_HEADERS=true
REACT_APP_ENABLE_CSP=true
REACT_APP_ENABLE_HSTS=true
REACT_APP_ENABLE_XSS_PROTECTION=true

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Sentry Error Tracking (optional)
REACT_APP_SENTRY_DSN=
REACT_APP_SENTRY_ENVIRONMENT=development

# Google Analytics (optional)
REACT_APP_GA_TRACKING_ID=

# =============================================================================
# EDUCATIONAL CONTENT
# =============================================================================
REACT_APP_ENABLE_CP2025_CURRICULUM=true
REACT_APP_ENABLE_CUSTOM_EXERCISES=true
REACT_APP_ENABLE_GAMIFICATION=true
REACT_APP_ENABLE_PROGRESS_TRACKING=true

# =============================================================================
# ACCESSIBILITY
# =============================================================================
REACT_APP_ENABLE_ACCESSIBILITY_FEATURES=true
REACT_APP_ENABLE_SCREEN_READER_SUPPORT=true
REACT_APP_ENABLE_KEYBOARD_NAVIGATION=true

# =============================================================================
# PRODUCTION NOTES
# =============================================================================
# For production deployment:
# 1. Set REACT_APP_ENVIRONMENT=production
# 2. Update REACT_APP_API_URL to your production backend URL
# 3. Set REACT_APP_ENABLE_DEBUG_MODE=false
# 4. Configure REACT_APP_SENTRY_DSN for error tracking
# 5. Set REACT_APP_ENABLE_ANALYTICS=true and configure GA_TRACKING_ID
# 6. Update REACT_APP_KIOSK_EXIT_CODE for security
# 7. Set appropriate timeouts and retry attempts
# 8. Configure proper CORS settings in backend 