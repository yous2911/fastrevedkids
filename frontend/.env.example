# =================================
# REVED KIDS FRONTEND CONFIGURATION
# =================================
# Copy this file to .env and update the values for your environment

# =================================
# CORE APPLICATION SETTINGS
# =================================
# Environment (development, production, test)
NODE_ENV=development

# Application version (for analytics and error reporting)
REACT_APP_VERSION=1.0.0

# =================================
# API CONFIGURATION
# =================================
# Backend API URL - Main connection point
REACT_APP_API_URL=http://localhost:3003/api

# Alternative API URL variables (fallbacks)
REACT_APP_API_BASE_URL=http://localhost:3003/api
REACT_APP_BACKEND_URL=http://localhost:3003/api

# API timeout in milliseconds
REACT_APP_API_TIMEOUT=10000

# =================================
# GDPR & PRIVACY CONFIGURATION
# =================================
# Enable GDPR features in frontend
REACT_APP_GDPR_ENABLED=true

# Enable consent banner
REACT_APP_CONSENT_BANNER_ENABLED=true

# Show granular consent controls
REACT_APP_GDPR_GRANULAR_CONTROLS=true

# Privacy policy and terms URLs
REACT_APP_PRIVACY_POLICY_URL=/privacy
REACT_APP_TERMS_OF_SERVICE_URL=/terms

# GDPR contact email
REACT_APP_GDPR_CONTACT_EMAIL=support@revedkids.com

# =================================
# MONITORING & ANALYTICS
# =================================
# Sentry DSN for error reporting (optional)
REACT_APP_SENTRY_DSN=

# Enable performance analytics
REACT_APP_ANALYTICS_ENABLED=true

# Analytics endpoint (if different from main API)
REACT_APP_ANALYTICS_URL=

# =================================
# SECURITY SETTINGS
# =================================
# Enable security headers in development
REACT_APP_SECURITY_HEADERS_ENABLED=true

# Content Security Policy mode (report-only, enforce)
REACT_APP_CSP_MODE=report-only

# Trusted domains for external resources
REACT_APP_TRUSTED_DOMAINS=localhost,127.0.0.1

# =================================
# UI/UX CONFIGURATION
# =================================
# Application name and branding
REACT_APP_NAME="RevEd Kids"
REACT_APP_DESCRIPTION="Plateforme éducative interactive pour enfants"

# Default language
REACT_APP_DEFAULT_LANGUAGE=fr

# Enable dark mode support
REACT_APP_DARK_MODE_ENABLED=true

# Theme configuration
REACT_APP_PRIMARY_COLOR=#3B82F6
REACT_APP_SECONDARY_COLOR=#10B981

# =================================
# FEATURE FLAGS
# =================================
# Enable experimental features
REACT_APP_EXPERIMENTAL_FEATURES=false

# Enable beta features
REACT_APP_BETA_FEATURES=false

# Enable debug mode
REACT_APP_DEBUG_MODE=false

# Enable service worker
REACT_APP_SERVICE_WORKER_ENABLED=true

# =================================
# PERFORMANCE SETTINGS
# =================================
# Enable performance tracking
REACT_APP_PERFORMANCE_TRACKING=true

# Bundle analyzer (for development)
REACT_APP_BUNDLE_ANALYZER=false

# Lazy loading threshold
REACT_APP_LAZY_LOADING_THRESHOLD=300

# =================================
# EXTERNAL SERVICES
# =================================
# CDN URL for static assets (production)
REACT_APP_CDN_URL=

# WebSocket URL (if different from API)
REACT_APP_WS_URL=ws://localhost:3003

# File upload service URL
REACT_APP_UPLOAD_URL=http://localhost:3003/api/upload

# =================================
# DEVELOPMENT TOOLS
# =================================
# Enable React DevTools
REACT_APP_DEVTOOLS_ENABLED=true

# Enable Redux DevTools
REACT_APP_REDUX_DEVTOOLS=true

# Enable API mocking (for development)
REACT_APP_MOCK_API=false

# Show component boundaries (development)
REACT_APP_SHOW_BOUNDARIES=false

# =================================
# CACHING & STORAGE
# =================================
# Local storage prefix
REACT_APP_STORAGE_PREFIX=reved_kids_

# Cache duration in milliseconds
REACT_APP_CACHE_DURATION=300000

# Enable offline mode
REACT_APP_OFFLINE_MODE=true

# =================================
# INTERNATIONALIZATION
# =================================
# Supported languages (comma-separated)
REACT_APP_SUPPORTED_LANGUAGES=fr,en

# Translation service URL
REACT_APP_TRANSLATION_URL=

# =================================
# EDUCATIONAL CONTENT
# =================================
# Educational content API
REACT_APP_CONTENT_API_URL=

# Media files base URL
REACT_APP_MEDIA_BASE_URL=

# Exercise difficulty levels
REACT_APP_DIFFICULTY_LEVELS=FACILE,MOYEN,DIFFICILE

# =================================
# SOCIAL & SHARING
# =================================
# Social media sharing
REACT_APP_ENABLE_SHARING=true

# Open Graph image URL
REACT_APP_OG_IMAGE_URL=

# Twitter handle
REACT_APP_TWITTER_HANDLE=@revedkids

# =================================
# DEPLOYMENT CONFIGURATION
# =================================
# Public URL (for production deployment)
PUBLIC_URL=

# Build path (relative to public folder)
BUILD_PATH=build

# Generate source maps (true/false)
GENERATE_SOURCEMAP=true

# =================================
# DEVELOPMENT NOTES
# =================================
# 1. REACT_APP_ prefix is required for React environment variables
# 2. All values are strings - use 'true'/'false' for booleans
# 3. API_URL should point to your backend server
# 4. Sentry DSN is optional for error reporting
# 5. Most features can be disabled by setting to 'false'

# =================================
# PRODUCTION CHECKLIST
# =================================
# □ Set NODE_ENV=production
# □ Update REACT_APP_API_URL to production backend
# □ Configure REACT_APP_SENTRY_DSN for error tracking
# □ Set proper PUBLIC_URL for deployment
# □ Disable debug and experimental features
# □ Review and update privacy policy URLs
# □ Test GDPR compliance features
# □ Verify all external service URLs
# □ Enable performance tracking for monitoring