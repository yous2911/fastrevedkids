# Production Environment Variables for RevEd Kids Frontend
# DO NOT COMMIT SECRETS TO VERSION CONTROL

# Node Environment
NODE_ENV=production
GENERATE_SOURCEMAP=false

# API Configuration
REACT_APP_API_URL=https://api.revedkids.com
REACT_APP_WS_URL=wss://api.revedkids.com
REACT_APP_CDN_URL=https://cdn.revedkids.com

# Analytics and Tracking
REACT_APP_ANALYTICS_ID=G-XXXXXXXXXX
REACT_APP_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Feature Flags
REACT_APP_ENABLE_DEV_TOOLS=false
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true
REACT_APP_ENABLE_ERROR_TRACKING=true
REACT_APP_ENABLE_A11Y_TESTING=false
REACT_APP_ENABLE_BETA_FEATURES=false

# Performance Settings
REACT_APP_CACHE_STATIC_ASSETS=86400000
REACT_APP_CACHE_API_RESPONSES=300000
REACT_APP_CACHE_IMAGES=604800000
REACT_APP_CACHE_AUDIO=2592000000

# Build Information
REACT_APP_VERSION=1.0.0
REACT_APP_BUILD_TIME=2025-01-09T00:00:00Z
REACT_APP_GIT_COMMIT=production

# Security Settings
REACT_APP_ENABLE_CSP=true
REACT_APP_ENABLE_SECURITY_HEADERS=true
REACT_APP_TRUSTED_DOMAINS=revedkids.com,api.revedkids.com,cdn.revedkids.com