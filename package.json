{
  "name": "reved-kids-fastify-backend",
  "version": "2.0.0",
  "description": "RevEd Kids educational app backend with Fastify",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "tsx watch --clear-screen=false src/server.ts",
    "build": "tsc",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:performance": "vitest run --testNamePattern=performance",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "db:generate": "drizzle-kit generate:mysql",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/db/seed.ts",
    "db:reset": "tsx src/db/reset.ts",
    "health": "curl -f http://localhost:3000/api/health || exit 1",
    "monitor": "curl http://localhost:3000/api/monitoring/health",
    "cache:clear": "curl -X DELETE http://localhost:3000/api/monitoring/cache",
    "cache:stats": "curl http://localhost:3000/api/monitoring/cache",
    "docker:build": "docker build -t reved-kids-fastify .",
    "docker:run": "docker run -p 3000:3000 reved-kids-fastify"
  },
  "dependencies": {
    "@fastify/compress": "^6.5.0",
    "@fastify/cookie": "^9.2.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/multipart": "^8.0.0",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/redis": "^6.1.1",
    "@fastify/sensible": "^5.5.0",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@fastify/under-pressure": "^8.3.0",
    "@fastify/websocket": "^10.0.1",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.1",
    "fastify": "^4.24.3",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.5",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "drizzle-kit": "^0.18.1",
    "eslint": "^8.57.1",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/reved-kids-fastify.git"
  },
  "keywords": [
    "education",
    "fastify",
    "typescript",
    "drizzle",
    "mysql",
    "redis",
    "websocket",
    "api",
    "backend"
  ],
  "author": "RevEd Kids Team",
  "license": "MIT"
}
